<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/site.css" type="text/css" />
    <link rel="stylesheet" href="/css/main-content.css" type="text/css" />
    <link href="https://cdn.jsdelivr.net/chosen/1.1.0/chosen.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/group.css" type="text/css" />

    <title>ToDoList - @ViewData["Title"]</title>

</head>
<body>
    <header>
        <a asp-action="Index">
            <img src="https://www.gstatic.com/images/branding/product/1x/keep_48dp.png" alt="Alternate Text" />
        </a>
        <a asp-action="Index">
            <h1 class="text-muted">Tasks List</h1>
        </a>
        <a asp-action="Logout" asp-controller="Account">
            Logout
        </a>
        <form class="search" method="get">
            @*<span class="icon-table-edit"></span>*@
            @*<input type="text" name="Search" value="" placeholder="Search" class="def-color" />*@
        </form>

    </header>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()

    </div>
    @*<footer>
            <p>&copy; 2019 - ToDoList</p>
        </footer>*@
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>


    @RenderSection("Scripts", required: false)

</body>
</html>
